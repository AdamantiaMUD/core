{
    "name": "@adamantiamud/core",
    "version": "0.0.1-alpha.1",
    "description": "Core libraries for the AdamantiaMUD game engine",
    "author": "Bill Parrott (https://chimericdream.com)",
    "license": "MIT",
    "repository": "github:adamantiamud/core",
    "bugs": "https://github.com/adamantiamud/core/issues",
    "main": "build/lib/index.js",
    "typings": "build/lib/index.d.ts",
    "type": "module",
    "files": [
        "src/**/*",
        "build/**/*",
        "*.adoc"
    ],
    "engines": {
        "node": ">=20"
    },
    "packageManager": "pnpm@9.0.2",
    "scripts": {
        "build": "tsc",
        "clean": "rimraf build",
        "lint": "eslint src/**/*",
        "lint:fix": "eslint src/**/* --fix",
        "lint:quiet": "eslint --quiet",
        "postbuild": "node scripts/copy-assets.cjs && pnpx copyfiles -u 1 src/**/*.yml build",
        "postlint:fix": "prettier --write src",
        "prebuild": "pnpm run clean",
        "prepublishOnly": "pnpm run build",
        "test": "jest --config ./jest.config.cjs --coverage",
        "type-check": "tsc --noEmit",
        "type-check:watch": "pnpm run type-check -- --watch"
    },
    "dependencies": {
        "bcryptjs": "2.4.3",
        "chalk": "5.3.0",
        "chalk-template": "1.1.0",
        "chance": "1.1.11",
        "chance-token-replacer": "1.3.1",
        "commander": "12.0.0",
        "deepmerge": "4.3.1",
        "dlv": "1.1.3",
        "dset": "3.1.3",
        "fs-extra": "11.2.0",
        "humanize-duration-ts": "2.1.1",
        "immer": "10.0.4",
        "js-yaml": "4.1.0",
        "logform": "2.6.0",
        "rfdc": "1.3.1",
        "sprintf-js": "1.1.3",
        "uuid": "9.0.1",
        "winston": "3.13.0",
        "winston-transport": "4.7.0",
        "wrap-ansi": "9.0.0",
        "ws": "8.16.0"
    },
    "devDependencies": {
        "@types/bcryptjs": "2.4.6",
        "@types/chance": "1.1.6",
        "@types/dlv": "1.1.4",
        "@types/fs-extra": "11.0.4",
        "@types/js-yaml": "4.0.9",
        "@types/sprintf-js": "1.1.4",
        "@types/uuid": "9.0.8",
        "@types/wrap-ansi": "8.0.2",
        "@types/ws": "8.5.10",
        "copyfiles": "2.4.1",
        "jest": "29.7.0",
        "jest-each": "29.7.0",
        "ts-jest": "29.1.2",
        "type-fest": "4.15.0"
    }
}
